#!/bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

for repo in ~/dev/* ~/BuiltSource/* ~/BuiltSource/case_sensitive/*
do
  if [[ ! -d $repo/.git ]]
  then
    continue
  fi

  cd $repo
  repoName=$(basename $repo)
  branch=$(git symbolic-ref --short HEAD)

  if [[ $branch == "master" ]]
  then
    echo -n "Updating $repoName... "
    git pull origin master > /dev/null 2>&1
    RESULT=$?

    if [ $RESULT -eq 0 ]
    then
      echo -e "${GREEN}DONE${NC}"
    else
      echo -e "${RED}FAILED!!!${NC}"
    fi
  else
    echo -e "${YELLOW}Skipping $repoName on branch $branch${NC}"
  fi
  
done
